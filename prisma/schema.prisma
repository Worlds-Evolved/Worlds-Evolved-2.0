generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model User {
  id           Int         @id @default(autoincrement())
  username     String      @unique
  email        String      @unique
  password     String
  campaigns    Campaign[]  @relation("UserCampaigns") 
  campaignsAsGM Campaign[] @relation("GameMasterCampaign")
  notes          Note[]  
}

model Campaign {
  id             Int              @id @default(autoincrement())
  title          String
  description    String
  gameMaster     User             @relation("GameMasterCampaign", fields: [gameMasterId], references: [id])
  gameMasterId   Int
  players        User[]           @relation("UserCampaigns") 
  interactiveMaps InteractiveMap[]
  notes          Note[] 
}

model InteractiveMap {
  id          Int       @id @default(autoincrement())
  title       String
  imageUrl    String
  campaign    Campaign @relation(fields: [campaignId], references: [id])
  campaignId  Int
}

model Note {
  id          Int        @id @default(autoincrement())
  content     String
  user        User       @relation(fields: [userId], references: [id])
  userId      Int
  campaign    Campaign   @relation(fields: [campaignId], references: [id])
  campaignId  Int
}